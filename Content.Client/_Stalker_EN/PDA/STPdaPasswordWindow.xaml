<controls:FancyWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Title="{Loc 'st-pda-password-window-title'}"
    MinSize="300 200"
    SetSize="300 200">
    <BoxContainer Orientation="Vertical" Margin="8" VerticalExpand="True">

        <!-- Non-owner: password entry -->
        <BoxContainer Name="PasswordEntryPanel" Orientation="Vertical">
            <Label Name="PromptLabel"
                   Text="{Loc 'st-pda-password-prompt'}"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 8" />
            <LineEdit Name="PasswordInput"
                      PlaceHolder="{Loc 'st-pda-password-placeholder'}"
                      HorizontalExpand="True"
                      Margin="0 0 0 4" />
            <Label Name="ErrorLabel"
                   StyleClasses="LabelSubText"
                   Modulate="#FF4444"
                   HorizontalAlignment="Center"
                   Margin="0 4 0 0"
                   Visible="False" />
            <Button Name="SubmitButton"
                    Text="{Loc 'st-pda-password-submit'}"
                    HorizontalAlignment="Center"
                    MinWidth="100"
                    Margin="0 8 0 0" />
        </BoxContainer>

        <!-- Owner: password settings -->
        <BoxContainer Name="OwnerSettingsPanel" Orientation="Vertical" Visible="False">
            <Label Text="{Loc 'st-pda-password-settings-title'}"
                   StyleClasses="LabelHeading"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 8" />
            <Label Name="CurrentStatusLabel"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 4" />
            <LineEdit Name="NewPasswordInput"
                      PlaceHolder="{Loc 'st-pda-password-new-placeholder'}"
                      HorizontalExpand="True"
                      Margin="0 4 0 0" />
            <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 8 0 0">
                <Button Name="SetPasswordButton"
                        Text="{Loc 'st-pda-password-set-button'}"
                        MinWidth="80"
                        Margin="4 0" />
                <Button Name="RemovePasswordButton"
                        Text="{Loc 'st-pda-password-remove-button'}"
                        MinWidth="80"
                        Margin="4 0" />
            </BoxContainer>
        </BoxContainer>

    </BoxContainer>
</controls:FancyWindow>
